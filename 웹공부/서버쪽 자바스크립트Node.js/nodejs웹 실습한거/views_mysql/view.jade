doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side JavaScript
    ul
      each topic in topics
        li
          a(href='/topic/'+topic.id)= topic.title
    artcle
      if topic
        h2= topic.title
        = topic.description
        div= 'by '+topic.author
      else
        h2 Welcome
        | This is server side javascript tutorial.
    ul
      li
        a(href='/topic/add') add
      if topic
       li
         a(href='/topic/'+topic.id+'/edit') Edit
       li
         form(action='/topic/'+topic.id+'/delete' method='post')
           input(type='submit' value='글삭제' onclick="alert('삭제되었습니다.')" )
